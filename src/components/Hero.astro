---
import { Image } from "astro:assets";
import avatar from "../assets/avatar.png";

const nombre = "Fernando Romero Barrigas";
const rol = "Estudiante de último curso de Ingeniería Informática";
const descripcion =
  "Apasionado del desarrollo software, la tecnología y los videojuegos.";
const githubUrl = "https://github.com/9Fernando";
const linkedinUrl =
  "https://linkedin.com/in/fernando-romero-barrigas-a307823a0";
const email = "fernandobusiness921@gmail.com";
const cvUrl = "/cv.pdf";
---

<section class="hero-card">
  <div class="hero-left">
    <div class="hero-avatar-wrapper">
      <span class="hero-badge">Open to work</span>
      <Image
        class="hero-avatar"
        src={avatar}
        alt={`Avatar de ${nombre}`}
        loading="eager"
      />
    </div>
  </div>

  <div class="hero-right">
    <div class="hero-text">
      <h1>{nombre}</h1>
      <h2>{rol}</h2>
      <p>{descripcion}</p>
    </div>

    <div class="hero-actions">
      <div class="hero-icons">
        <a
          href={githubUrl}
          aria-label="GitHub"
          target="_blank"
          rel="noreferrer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
            ></path>
          </svg>
        </a>
        <a
          href={linkedinUrl}
          aria-label="LinkedIn"
          target="_blank"
          rel="noreferrer"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"
            ></path>
            <path d="M8 11l0 5"></path>
            <path d="M8 8l0 .01"></path>
            <path d="M12 16l0 -5"></path>
            <path d="M16 16v-3a2 2 0 0 0 -4 0"></path>
          </svg>
        </a>
        <a href={`mailto:${email}`} aria-label="Correo">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
            ></path>
            <path d="M3 7l9 6l9 -6"></path>
          </svg>
        </a>
      </div>

      <a class="hero-cv-button" href={cvUrl} target="_blank" rel="noreferrer">
        Descargar CV
      </a>
    </div>
  </div>
</section>

<style>
  .hero-card {
    max-width: 900px;
    margin: 4rem auto;
    padding: 2rem;
    border-radius: 1.5rem;
    background: radial-gradient(circle at top left, #1f2937, #020617);
    color: #f9fafb;
    display: flex;
    gap: 2rem;
    align-items: center;
    box-shadow: 0 25px 50px rgba(15, 23, 42, 0.6);
  }

  .hero-left {
    flex: 0 0 180px;
    display: flex;
    justify-content: center;
  }

  .hero-avatar {
    width: 160px;
    height: 160px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid #22c55e;
    box-shadow: 0 10px 25px rgba(34, 197, 94, 0.5);
  }

  .hero-avatar-wrapper {
    position: relative;
    display: inline-block;
  }

  .hero-badge {
    position: absolute;
    top: 150px;
    left: 25px;
    background: #22c55e;
    color: #022c22;
    padding: 0.25rem 0.6rem;
    border-radius: 999px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 6px 12px rgba(34, 197, 94, 0.5);
  }

  .hero-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .hero-text h1 {
    font-size: 2.2rem;
    margin: 0;
  }

  .hero-text h2 {
    font-size: 1.2rem;
    margin: 0.25rem 0 0.75rem;
    color: #9ca3af;
    font-weight: 500;
  }

  .hero-text p {
    margin: 0;
    color: #e5e7eb;
    line-height: 1.6;
  }

  .hero-actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-icons {
    display: flex;
    gap: 0.75rem;
  }

  .hero-icons a {
    width: 40px;
    height: 40px;
    border-radius: 999px;
    border: 1px solid #4b5563;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: #e5e7eb;
    font-weight: 600;
    font-size: 0.9rem;
    transition:
      background 0.15s ease,
      transform 0.15s ease,
      border-color 0.15s ease;
  }

  .hero-icons a:hover {
    background: #111827;
    border-color: #22c55e;
    transform: translateY(-1px);
  }

  .hero-cv-button {
    padding: 0.7rem 1.6rem;
    border-radius: 999px;
    background: #22c55e;
    color: #022c22;
    text-decoration: none;
    font-weight: 600;
    white-space: nowrap;
    transition:
      background 0.15s ease,
      transform 0.15s ease,
      box-shadow 0.15s ease;
  }

  .hero-cv-button:hover {
    background: #16a34a;
    transform: translateY(-2px);
    box-shadow: 0 15px 30px rgba(22, 163, 74, 0.5);
  }

  @media (max-width: 700px) {
    .hero-card {
      flex-direction: column;
      text-align: center;
    }

    .hero-left {
      flex: none;
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
