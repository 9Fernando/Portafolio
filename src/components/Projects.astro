---
import { Image } from "astro:assets";
import logoIPO from "../assets/logoIPOkemon.png";
import logoVentiWare from "../assets/logoVentiWare.png";
import logoRemote from "../assets/logoRemote.png";
import logoDRON from "../assets/logoDRON.png";
import WIP from "../assets/wip.png";

const projects = [
  {
    name: "Remotetypes",
    description:
      "Servicio de almacenamiento distribuido de listas, conjuntos y diccionarios remotos en Python usando ZeroC Ice, integrado con Apache Kafka para procesar operaciones vía eventos JSON",
    tech: ["Python", "ZeroC Ice", "Apache Kafka", "Github Actions"],
    link: "https://github.com/9Fernando/SSDDRemotetypes",
    image: logoRemote,
  },
  {
    name: "IPOkemon",
    description:
      "Aplicación de escritorio con temática de Pokemon. Permite navegar por un catálogo de Pokemon y cuenta con un sistema de combate en tiempo real",
    tech: [".NET", "C#", "UWP", "WPF"],
    link: "https://github.com/9Fernando/IPOkemonAPP",
    image: logoIPO,
  },
  {
    name: "VentiWare",
    description:
      "Aplicación web que facilita, mediante el uso de 3 APIs externas, estadísticas de juego, comparadores de precios e incluso un chatbot para asistir con preguntas simples o recomendaciones",
    tech: [
      "Java",
      "Angular",
      "Spring Boot",
      "MySQL",
      "Docker",
      "Google Gemini",
    ],
    link: "https://github.com/cathe-b45/isi-ventiware",
    image: logoVentiWare,
  },
  {
    name: "D.R.O.N Program",
    description:
      "Videojuego 3D sencillo desarrollado para el hardware Nintendo 3DS. Se trata de una breve experiencia multimedia desarrollada con la interactividad y la optimización en mente",
    tech: ["Unity", "C#", "Sistemas Legacy", "3D Modeling", "3D Animation"],
    link: "https://github.com/9Fernando/ProyectoMultimedia",
    image: logoDRON,
  },
  {
    name: "Gramola",
    description:
      "Aplicación web Full Stack diseñada para bares y establecimientos. Permite a los dueños gestionar la música conectando su cuenta de Spotify, mientras que los clientes pueden buscar canciones y pagar una pequeña tarifa para añadirlas a la cola de reproducción en tiempo real",
    tech: ["Angular", "Spring Boot", "Spotify API", "Stripe", "OAuth", "Java"],
    image: WIP,
  },
  {
    name: "Web Asociación Iker",
    description:
      "Página web para la Asociación Iker, desarrollada con el objetivo de aplicar en su creación los conceptos de la asignatura Comercio Electrónico. Incluye secciones informativas, conexión con la cuenta de Instagram de la asociación y tienda online entre otras funcionalidades",
    tech: ["HTML", "WordPress", "LocalWP", "WooCommerce", "MySQL", "PHP"],
    image: WIP,
  },
];
---

<section class="projects">
  <header class="projects-header">
    <h2>Proyectos</h2>
    <p>Una selección de proyectos destacados.</p>
  </header>

  <div class="projects-grid">
    {
      projects.map((project) => (
        <article class="project-card">
          {project.image && (
            <div class="project-image-wrapper">
              <Image
                src={project.image}
                alt={project.name}
                class="project-image"
              />
            </div>
          )}
          <div class="project-content">
            <h3>{project.name}</h3>
            <p class="project-desc">{project.description}</p>

            <ul class="project-tech">
              {project.tech.map((t) => (
                <li>{t}</li>
              ))}
            </ul>

            <a
              class="project-link"
              href={project.link}
              target="_blank"
              rel="noreferrer"
            >
              Ver proyecto
            </a>
          </div>
        </article>
      ))
    }
  </div>
</section>

<style>
  .projects {
    max-width: 900px;
    margin: 0 auto 3rem;
    padding: 2rem;
    border-radius: 1.5rem;
    background: rgba(15, 23, 42, 0.9);
    border: 1px solid rgba(148, 163, 184, 0.3);
    color: #e5e7eb;
  }

  .projects-header h2 {
    margin: 0 0 0.5rem;
    font-size: 1.6rem;
  }

  .projects-header p {
    margin: 0 0 1.5rem;
    color: #cbd5f5;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
    gap: 1.5rem;
  }

  .project-card {
    border-radius: 1rem;
    background-color: #111827;
    border: 1px solid rgba(148, 163, 184, 0.4);
    box-shadow: 0 18px 35px rgba(15, 23, 42, 0.7);
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .project-image-wrapper {
    width: 100%;
    height: 150px;
    overflow: hidden;
  }

  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .project-content {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    flex: 1;
  }

  .project-card h3 {
    margin: 0;
    font-size: 1.1rem;
  }

  .project-desc {
    margin: 0;
    font-size: 0.95rem;
    color: #e5e7eb;
  }

  .project-tech {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    padding: 0;
    margin: 0.25rem 0 0.5rem;
  }

  .project-tech li {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    border-radius: 999px;
    background: rgba(15, 118, 110, 0.25);
    border: 1px solid rgba(45, 212, 191, 0.4);
    color: #a5f3fc;
  }

  .project-link {
    margin-top: auto;
    align-self: flex-start;
    font-size: 0.9rem;
    text-decoration: none;
    color: #22c55e;
    font-weight: 500;
    border-radius: 999px;
    padding: 0.45rem 0.9rem;
    border: 1px solid rgba(34, 197, 94, 0.4);
    background: rgba(15, 23, 42, 0.9);
    transition:
      background 0.15s ease,
      transform 0.1s ease,
      box-shadow 0.15s ease;
  }

  .project-link:hover {
    background: #16a34a;
    color: #022c22;
    transform: translateY(-1px);
    box-shadow: 0 10px 20px rgba(22, 163, 74, 0.6);
  }
</style>
